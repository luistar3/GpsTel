@model List<Gpstel.Models.ObservacionCliente>
    @{
        ViewBag.Title = "observacion";
    }

    <h2>observacion</h2>
<script>

    var idcliente = @ViewBag.idCliente;

   
</script>

    <div class="main-content">
        <div class="section__content section__content--30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="table-responsive table--no-card m-b-20">
                            <table class="table table-borderless table-striped table-earning" id="example">
                                <thead>
                                    <tr>
                                        <th>id</th>
                                        <th>Observacion</th>
                                        <th>Estado</th>
                                        
                                     
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>@(item.idobservacion) </td>
                                        <td>@(item.observacion) </td>

                                        @if (item.estado == "0")
                                        {
                                            <td>INACTIVO </td>
                                        }
                                        else
                                        {
                                            <td>ACTIVO </td>
                                        }

                                            <td>



                                                <button type="button" class="item" data-placement="top" title="Edit" data-toggle="modal" data-target="#nuevo" onclick="obtenerGps('@item.idobservacion')">
                                                    <i class="zmdi zmdi-edit"></i>
                                                </button>




                                            </td>





                                    </tr>
                                
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="au-card au-card-top-countries ">
                            <div class="au-card-inner">
                                <div class="responsive">
                                    <form action="" method="post" novalidate="novalidate">
                                       
                                        <div class="form-group col-24">
                                            <label for="cc-number" class="control-label mb-1">Observación</label>
                                          
                                            <textarea class="form-control cc-exp" id="idTexto" maxlength="99"></textarea>
                                            <span class="help-block" data-valmsg-for="cc-number" data-valmsg-replace="true"></span>
                                        </div>
                                        <div class="row col-12" >
                                            <div class="col-12">
                                                <div class="form-group">
                                                  
                                                  

                                                        <select id="idEstado" name="cc-exp" type="tel" class="form-control" value="" data-val="true" data-val-required="Please enter the card expiration"
                                                                data-val-cc-exp="Please enter a valid month and year" placeholder="MM / YY"
                                                                autocomplete="cc-exp ">
                                                            <option value="0">Inactivo</option>
                                                            <option value="1">Activo</option>
                                                            
                                                        </select>

                                               
                                                    
                                                   
                                                </div>
                                            </div>
                                            <div class="col-lg-12">
                                               
                                            </div>
                                        </div>
                                        <div>
                                            <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block" onclick="guardarObservacion()" >
                                              
                                                
                                                <span id="payment-button-sending" style="display:none;">Sending…</span>
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="copyright">
                            <p>Copyright © 2018 Colorlib. All rights reserved. Template by <a href="">Colorlib</a>.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
   
<script>

    function guardarObservacion() {

        
        var texto = $("#idTexto").val();
        var url = "@Url.Action("guardarEditar", "ObCliente")";
        var estado = $("#idEstado").val();

        var chip = { observacion: texto, estado: estado, idcliente: idcliente };

        $.ajax({
            type: "POST",
            url: url,
            data: JSON.stringify(chip),
            contentType: "application/json"

        });
    }

</script>